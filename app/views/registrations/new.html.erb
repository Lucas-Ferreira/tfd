<%= render "shared/navbar2" %>

<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="d-flex justify-content-center bg-white rounded p-5 shadow">
        <%= form_with url: sign_up_path, class:"row g-1 w-10", method: :post do |form| %>
          <div><%= form.label :email %></div>
          <%= form.text_field :email, class:"form-control col-auto" %>
          <div><%= form.label :password %></div>
          <%= form.text_field :password, class:"form-control col-auto" %>
          <div><%= form.label :password_confirmation %></div>
          <%= form.text_field :password_confirmation, class:"form-control col-auto" %>
          <div><%= form.label :role %></div>
          <%= form.select :role,["Motorista","Admin/Prefeitura"], class:"form-control col-auto" %>
          <div><%= form.submit "Salvar", class: "btn btn-primary mt-2 text-center" %></div>
        <% end %>
      </div>
    </div>
  </div>


<div class="row mt-5">
    <div class="col-md-12">
      <div class="main-card mb-3 card">
        <div class="card-header">Usu√°rios Ativos
          <div class="btn-actions-pane-right">
          </div>
        </div>
        <div class="table-responsive">
          <table
            class="align-middle mb-0 table table-borderless table-striped table-hover">
            <thead>
              <tr>
                <th class="text-center">#</th>
                <th>Email</th>
                <th class="text-center">Cargo</th>
              </tr>
            </thead>
            <tbody>
             <% @users.each do |u| %>
              <tr>
                <td class="text-center text-muted"><%= u.id %></td>
                <td>
                  <div class="widget-content p-0">
                    <div class="widget-content-wrapper">
                      <div class="widget-content-left mr-3">
                        <div class="widget-content-left">
                          <img width="40" class="rounded-circle" src="assets/images/avatars/4.jpg" alt="">
                        </div>
                      </div>
                      <div class="widget-content-left flex2">
                        <div class="widget-heading"><%= u.email %></div>
                        <div class="widget-subheading opacity-7"></div>
                      </div>
                    </div>
                  </div>
                </td>
                <% if u.role == true %>
                <% @cargo = "Admin" %>
                <% else %>
                <% @cargo = "Motorista" %>
                <% end %>
                <td class="text-center">
                  <div class="badge badge-warning"><%= @cargo %></div>
                </td>
                <td class="text-center">
                  <button class="mr-2 btn-icon btn-icon-only btn btn-outline-danger"><i class="pe-7s-trash btn-icon-wrapper">
          </i></button>
          <%= link_to "Edit", edit_user_path(u), class: "btn btn-success" %>
                </td>
              </tr>
              <% end %>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="d-block text-center card-footer">
        </div>
      </div>
    </div>
  </div>


</div>
