<%= render "shared/navbar2" %>
<div class="container mt-5">
  <% @rotums.each do |r| %>
  <div class="card-product mt-5">
    <img
      src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
    <div class="card-product-infos mt-2 mb-2">
      <p>Origem:</p>
      <h2><%= r.origem %></h2>
      <p>Destino:</p>
      <h2><%= r.destino %></h2>
      <p><strong>Especialidade: </strong><%= r.especialidade %></p>
      <%= link_to "Visualizar", rotum_path(r), class: "btn btn-info btn-sm m-2" %>
    </div>
  </div>
  <% end %>
</div>
